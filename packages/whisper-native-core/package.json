{
  "name": "@christopheralphonse/whisper-native-core",
  "version": "1.0.0",
  "description": "Native Whisper speech-to-text with real-time streaming for Node.js and Electron",
  "author": "Christopher Alphonse",
  "homepage": "https://github.com/ChristopherAlphonse/node-native-audio",
  "repository": "github:ChristopherAlphonse/node-native-audio",
  "license": "MIT",
  "keywords": [
    "whisper",
    "speech-to-text",
    "transcription",
    "ai",
    "native",
    "electron",
    "real-time",
    "streaming"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "binding.gyp",
    "src/native/**/*",
    "models/**/*"
  ],
  "scripts": {
    "dev": "tsc && vite build --watch",
    "build": "tsc && vite build",
    "build:types": "dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier ./src --write",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "rebuild": "node-gyp rebuild",
    "download-models": "node scripts/download-models.js"
  },
  "dependencies": {
    "@christopheralphonse/audio-capture-core": "*",
    "@christopheralphonse/audio-processor-core": "*",
    "node-addon-api": "^8.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
